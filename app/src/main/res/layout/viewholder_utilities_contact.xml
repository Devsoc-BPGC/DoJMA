<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:contextClickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/utilities_contacts_background"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/viewholder_contact_format_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Contacts"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/viewholder_contact_format_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewholder_contact_format_call1"
            android:layout_alignTop="@+id/viewholder_contact_format_call1"
            android:layout_below="@+id/viewholder_contact_format_title"
            android:layout_toLeftOf="@+id/viewholder_contact_format_call1"
            android:layout_toStartOf="@+id/viewholder_contact_format_call1"
            android:gravity="start|center_vertical"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="Medical Centre "
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/viewholder_contact_format_call1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewholder_contact_format_title"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            app:srcCompat="@drawable/ic_call_white"/>

        <TextView
            android:id="@+id/viewholder_contact_format_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewholder_contact_format_call2"
            android:layout_alignTop="@+id/viewholder_contact_format_call2"
            android:layout_below="@+id/viewholder_contact_format_name1"
            android:layout_toLeftOf="@+id/viewholder_contact_format_call2"
            android:layout_toStartOf="@+id/viewholder_contact_format_call2"
            android:gravity="start|center_vertical"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="Main Gate"

            android:textColor="@color/white"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/viewholder_contact_format_call2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/utilities_contacts_call_button_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewholder_contact_format_call1"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            app:srcCompat="@drawable/ic_call_white"/>


        <TextView
            android:id="@+id/viewholder_contact_format_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewholder_contact_format_call3"
            android:layout_alignTop="@+id/viewholder_contact_format_call3"
            android:layout_below="@+id/viewholder_contact_format_name2"
            android:layout_toLeftOf="@+id/viewholder_contact_format_call3"
            android:layout_toStartOf="@+id/viewholder_contact_format_call3"
            android:gravity="start|center_vertical"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"

            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="SWD Office"
            android:textColor="@color/white"
            android:textSize="14sp"/>


        <ImageButton
            android:id="@+id/viewholder_contact_format_call3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewholder_contact_format_call2"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_call_white"/>

        <TextView
            android:id="@+id/viewholder_contact_format_name4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewholder_contact_format_call4"
            android:layout_alignTop="@+id/viewholder_contact_format_call4"
            android:layout_below="@+id/viewholder_contact_format_name3"
            android:layout_toLeftOf="@+id/viewholder_contact_format_call4"
            android:layout_toStartOf="@+id/viewholder_contact_format_call4"
            android:gravity="start|center_vertical"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="Chief Warden"
            android:textColor="@color/white"
            android:textSize="14sp"/>


        <ImageButton
            android:id="@+id/viewholder_contact_format_call4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/viewholder_contact_format_call3"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_call_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewholder_contact_format_call4"
            android:padding="16dp"
            android:text="Click here for more contact numbers"
            android:textColor="@color/white"
            android:textSize="12sp"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
