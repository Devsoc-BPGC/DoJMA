<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_format_slideshow_image_sdv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageScaleType="centerCrop"
        app:overlayImage="@drawable/gradient_nav_bar_title"
        app:placeholderImage="@drawable/bits"
        app:placeholderImageScaleType="centerCrop"
        />

    <TextView
        android:id="@+id/item_format_slideshow_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_format_slideshow_image_sdv"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_format_slideshow_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_format_slideshow_title_tv"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="4dp"
        android:text="Subtitle"
        android:textColor="@color/grey100"
        android:textSize="16sp" />
</RelativeLayout>