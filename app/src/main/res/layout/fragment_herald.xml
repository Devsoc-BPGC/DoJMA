<!-- Do not change this relative layout to a different layout as it is required by the DragScrollBar library-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?defaultBackground"
    android:focusableInTouchMode="true"
    tools:context="com.csatimes.dojma.fragments.Herald">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/herald_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contextClickable="true"
        tools:targetApi="n" />
</RelativeLayout>
