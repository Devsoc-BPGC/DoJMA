<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_about_dojma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csatimes.dojma.activities.AboutDojmaActivity"
    tools:showIn="@layout/activity_about_dojma">

    <ImageView
        android:id="@+id/about_dojma_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/dojma"/>

    <ImageButton
        android:id="@+id/content_about_dojma_fb_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_facebook_white"
        android:textColor="@color/black"
        android:background="@color/blue500"
        android:layout_below="@+id/about_dojma_image"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/about_dojma_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:paddingTop="8dp"
        android:textColor="@color/blue500"
        android:layout_below="@+id/content_about_dojma_fb_imgbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
