<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="18sp"
    android:paddingHorizontal="18sp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="center_horizontal"
        android:cropToPadding="false"
        android:paddingBottom="12sp"
        fresco:placeholderImage="@android:drawable/ic_menu_camera"
        fresco:roundedCornerRadius="8sp"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:textSize="22sp"
        android:fontFamily="@font/ralewaymedium"
        android:textColor="#000000"
        android:textStyle="bold"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        >

        <TextView
            android:id="@+id/dateStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingBottom="10sp"
            android:textColor="@color/browser_actions_title_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:clickable="true"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingBottom="10sp"
            android:textColor="@color/browser_actions_title_color"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/item_format_video_share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_share"/>

    </LinearLayout>
    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:paddingStart="18sp" />
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey600" />




</LinearLayout>
