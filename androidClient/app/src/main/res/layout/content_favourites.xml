<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_favourites"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?defaultBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.csatimes.dojma.activities.FavouritesActivity"
    tools:showIn="@layout/activity_favourites">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favourites_herald_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/favourites_empty"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Click on the â™¡ to save articles to your favourites"
        android:textColor="?customFavouritesTextColor"
        android:textSize="20sp"
