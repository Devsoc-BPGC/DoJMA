<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_format_contact_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textColor="?customContactsNameTextColor"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_format_contact_call_imgbtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_format_contact_sub_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:text="sub 1"
        android:textColor="?customContactsSub1TextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/item_format_contact_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_format_contact_name_tv" />

    <TextView
        android:id="@+id/item_format_contact_sub_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="sub2"
        android:textColor="?customContactsSub2TextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_format_contact_sub_1_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/item_format_contact_sub_1_tv"
        app:layout_constraintRight_toLeftOf="@+id/item_format_contact_call_imgbtn"
        app:layout_constraintTop_toTopOf="@+id/item_format_contact_sub_1_tv" />

    <ImageButton
        android:id="@+id/item_format_contact_call_imgbtn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:theme="@style/CallButtonColorControlHighlight"
        app:layout_constraintBottom_toBottomOf="@+id/item_format_contact_sub_1_tv"
        app:layout_constraintRight_toLeftOf="@+id/item_format_contact_email_imgbtn"
        app:layout_constraintTop_toTopOf="@+id/item_format_contact_name_tv"
        app:srcCompat="@drawable/call_button_color_state_list" />

    <ImageButton
        android:id="@+id/item_format_contact_email_imgbtn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:theme="@style/EmailButtonColorControlHighlight"
        app:layout_constraintBottom_toBottomOf="@+id/item_format_contact_sub_1_tv"
        app:layout_constraintRight_toLeftOf="@+id/item_format_contact_add_contact_imgbtn"
        app:layout_constraintTop_toTopOf="@+id/item_format_contact_name_tv"
        app:srcCompat="@drawable/email_button_color_state_list" />

    <ImageButton
        android:id="@+id/item_format_contact_add_contact_imgbtn"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/item_format_contact_sub_1_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_format_contact_name_tv"
        app:srcCompat="@drawable/ic_add_contact" />

</androidx.constraintlayout.widget.ConstraintLayout>