<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AboutUsActivity"
    tools:showIn="@layout/activity_about_us">

    <TextView
        android:id="@+id/content_about_us_app_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/Dojma_android_app"
        android:textColor="@color/mac_color"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/content_about_us_app_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/app_version"
        android:textColor="@color/mac_color"
        android:textSize="12sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/content_about_us_mac_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@color/mac_color"
        android:src="@drawable/maclogopng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:weightSum="50"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp">

    <ImageButton
        android:id="@+id/content_about_us_fb_imgbtn"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/mac_color"
        android:textColor="@color/white"
        app:srcCompat="@drawable/ic_facebook_white" />

    <ImageButton
        android:id="@+id/content_about_us_google_play_imgbtn"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:background="@color/mac_color"
        android:textColor="@color/white"
        app:srcCompat="@drawable/ic_google_play" />

    <ImageButton
        android:id="@+id/content_about_us_github_imgbtn"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:background="@color/mac_color"
        android:textColor="@color/white"
        app:srcCompat="@drawable/ic_github_circle" />

    <ImageButton
        android:id="@+id/content_about_us_linkedin_imgbtn"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:background="@color/mac_color"
        android:textColor="@color/white"
        app:srcCompat="@drawable/ic_linkedin" />

    <ImageButton
        android:id="@+id/content_about_us_website_imgbtn"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:background="@color/mac_color"
        android:textColor="@color/white"
        app:srcCompat="@drawable/ic_website" />

    </LinearLayout>

    <TextView
        android:id="@+id/content_about_us_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/about_us_main" />

    <TextView
        android:id="@+id/content_about_us_morebymac_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/more" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/content_about_us_morebymac_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/content_about_us_contributors_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Contributors" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/content_about_us_contributors_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
